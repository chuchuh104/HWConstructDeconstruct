<Window x:Class="HomeWorkConstructDeconstruct.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeWorkConstructDeconstruct"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox Name="ProductListBox" HorizontalAlignment="Left" Height="200" Margin="10,10,0,0" VerticalAlignment="Top" Width="480"/>
        <Button Content="Add Product" HorizontalAlignment="Left" Margin="10,250,0,0" VerticalAlignment="Top" Width="100" Click="AddProduct"/>
        <Button Content="Show Details" HorizontalAlignment="Left" Margin="120,250,0,0" VerticalAlignment="Top" Width="100" Click="ShowProductDetails"/>
    </Grid>
</Window>
